@model List<ResultProductDto>
<section class="food_section layout_padding-bottom">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Öne Çıkan Ürünlerimiz
            </h2>
        </div>

        
         <ul class="filters_menu">
            <li class="active" data-filter="*">Tüm Ürünler</li>
            <li data-filter=".Hamburger">Burger</li>
            <li data-filter=".Makarna">Makarna</li>
            <li data-filter=".Kızartmalar">Kızartmalar</li>
            <li data-filter=".Salata">Salatalar</li>
            <li data-filter=".Tatlı">Tatlılar</li>
            <li data-filter=".İçecek">İçecekler</li>
        </ul> 

        <div class="filters-content">
            <div class="row grid">
                @foreach (var item in Model)
                {
                    <div class="col-sm-6 col-lg-4 all @item.CategoryName">
                        <div class="box">
                            <div>
                                <div class="img-box">
                                    <img src="@item.ImageUrl" alt="">
                                </div>
                                <div class="detail-box">
                                    <h5>
                                        @item.ProductName
                                    </h5>
                                    <p>
                                        @item.Description
                                    </p>
                                    <div class="options">
                                        <h6>
                                            @item.Price₺
                                        </h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
            <div class="btn-box">
                <a href="/Menu/Index/">
                    Sipariş Ver
                </a>
            </div>
        </div>
</section>